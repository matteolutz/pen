{
  "compilerOptions": {
    "experimentalDecorators": true,
    "composite": true,
    "declaration": true,
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": true,
    "sourceRoot": "./src/",
    "outDir": "./dist/",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "types": ["node"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/"]
}